find_whitespace_files() {
	grep -rE '[[:space:]]+$' . | sed 's/:.*//' | grep '\.[ch]$' | sort | uniq
}

if test ! -f src/main.c; then
	echo "You are not in the Eggdrop root directory."
	exit 1
fi

echo -n "Running 'make clean'... "
make clean >/dev/null 2>&1
echo "done."

count=0
for i in $(find_whitespace_files); do
	count=$(($count + 1))
	echo -n "${i}... "
	sed -e 's:[ \t]*$::g' $i > ${i}_
	mv ${i}_ $i
	echo "done."
done

echo "Found/fixed ${count} files."
