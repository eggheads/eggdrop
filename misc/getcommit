# configuration script generated by Autoconf, you may include it under
# the same distribution terms that you use for the rest of that program.

command -v git >/dev/null 2>&1
HASGIT=$?
VER=`git describe --always 2>/dev/null`
if [ $? -ne 0 -o $HASGIT -ne 0 -o "x$VER" = "x" ]; then
	if [ -r src/version.h ]; then
		VER=$(misc/setpatch -s 2>/dev/null)
		if [ $? -ne 0 -o "x$VER" = "x" ]; then
			VER="unknown"
		fi
	fi
fi
echo -n $VER
