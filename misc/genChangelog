git log --no-merges --pretty=format:"%w(75)%H %n Committed %ai by %aN %n %s %n %b" $1

show_usage() {
        echo "Usage: `basename $0` <previous release tag name>"
        echo ""
        exit 1
}



if test "x${1}" = "x-h" || test "x${1}" = "x--help"; then
        show_usage
fi

do_rc=0
if test "x${1}" = "x-r" || test "x${1}" = "x--rc"; then
        do_rc=1
        if test "x${2}" = "x"; then
                show_usage
        fi
        rc_number=$2
fi

if test ! -f src/main.c; then
        echo "You are not in the Eggdrop root directory."
        exit 1
fi

