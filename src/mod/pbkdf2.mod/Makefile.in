# Makefile for src/mod/pbkdf2.mod/

srcdir = .

MODNAME=pbkdf2
CRYPTODEP=@CRYPTODEP@_dep

MYCPPFLAGS=@CPPFLAGS@ $(CPPFLAGS)
MYCFLAGS=$(CFLAGS) $(MYCPPFLAGS) -I.
LIBS=@LIBS@ $(MODULE_XLIBS) $(XLIBS)
LDFLAGS=@LDFLAGS@
RANLIB=@RANLIB@

MAKE_DEPEND = $(MAKE) 'MAKE=$(MAKE)' 'CC=$(CC)' \
              'CFLAGS=-I.. -I../../../.. -DMAKING_DEPEND -DHAVE_CONFIG_H -DMAKING_MODS'

MAKE_MBEDTLS = $(MAKE) 'MAKE=$(MAKE)' 'CC=$(CC)' 'LD=$(LD)' \
               'CFLAGS=-I.. -I../../../.. $(CFLAGS_NOINC)' \
               'LDFLAGS=$(LDFLAGS)' 'MOD_EXT=$(MOD_EXT)' 'STRIP=$(STRIP)' \
	       'LIBS=$(LIBS)' 'RANLIB=$(RANLIB)' 'XLIBSFILE=../../xobjs' \
	       'XLIBSPREFIX=$(MODNAME).mod/mbedtls'
doofus:
	@echo ""
	@echo "Let's try this from the right directory..."
	@echo ""
	@cd ../../../ && make

static: ../$(MODNAME).o
	cp modxobjs ../mod.$(MODNAME).xlibs

modules: ../../../$(MODNAME).$(MOD_EXT)

../$(MODNAME).o: $(CRYPTODEP)
	$(CC) $(MYCFLAGS) -DMAKING_MODS -c $(srcdir)/$(MODNAME).c
	@rm -f ../$(MODNAME).o
	mv $(MODNAME).o ../

../../../$(MODNAME).$(MOD_EXT): ../$(MODNAME).o
	$(LD) $(LDFLAGS) -o ../../../$(MODNAME).$(MOD_EXT) ../$(MODNAME).o `cat xobjs` $(LIBS)
	$(STRIP) ../../../$(MODNAME).$(MOD_EXT)

mbedtls_dep: _dep
	@(cd mbedtls && $(MAKE_MBEDTLS) "VPATH=." "srcdir=." mbedtls)
	@(for f in mbedtls/*.o; do echo "$$f" >> xobjs; echo "mod/$(MODNAME).mod/$$f" >> modxobjs; done)

_dep:
	@(rm -f xobjs modxobjs; touch xobjs modxobjs)

depend:
	$(CC) $(MYCFLAGS) -MM $(srcdir)/$(MODNAME).c -MT ../$(MODNAME).o > .depend
	@(cd mbedtls && $(MAKE_DEPEND) "VPATH=." "srcdir=." depend)

clean:
	@rm -f .depend *.o *.$(MOD_EXT) *~ xobjs modxobjs
	@(cd mbedtls && $(MAKE) "VPATH=." "srcdir=." clean)

distclean: clean
	@rm -rf autom4te.cache Makefile config.log config.status config.cache

.PHONY: mbedtls

